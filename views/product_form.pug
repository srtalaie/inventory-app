extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#title.form-control(type='text', placeholder='Name of product' name='name' required value=(undefined===product ? '' : product.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(name='category' required)
        option(value='') --Please select a category--
        for category in categories
          if product
            if category._id.toString()===product.category._id.toString()
              option(value=category._id selected) #{category.name}
            else
              option(value=category._id) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='description') Description:
      textarea#summary.form-control(type="textarea" placeholder='Description' name='description' required)= undefined===product ? '' : product.description
    div.form-group
      label(for='price') Price:
      input#isbn.form-control(type="number" min="1" step="any", placeholder='0.00' name='price' value=(undefined===product ? '' : product.price) required)
    div.form-group
      label(for='stock') Amount in Stock:
      input#isbn.form-control(type='number', placeholder='0' name='stock' value=(undefined===product ? '' : product.stock) required)
    div.form-group
      label(for='img_url') Name:
      input#title.form-control(type='text', placeholder='https://picsum.photos/200/300' name='img_url' required value=(undefined===product ? '' : product.img_url) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
