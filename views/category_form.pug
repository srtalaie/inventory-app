extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Category Name' name='name' required value=(undefined===category ? '' : category.name) )
      input#name.form-control(type='textarea', placeholder='Category Description' name='description' required value=(undefined===category ? '' : category.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
